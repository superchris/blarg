---
layout: base.njk
title: Home
---
<h1>{{ site.title }}</h1>
<p>{{ site.description }}</p>

<h2>Recent Posts</h2>
<ul>
  {%- for post in collections.posts | reverse -%}
  <li>
    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    <time datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
  </li>
  {%- endfor -%}
</ul>
